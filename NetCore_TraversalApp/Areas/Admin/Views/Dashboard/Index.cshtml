
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-lg-8 mb-4 order-0">
          @await Component.InvokeAsync("_DashboardBanner")
        </div>
        <div class="col-lg-4 col-md-4 order-1">
           @await Component.InvokeAsync("_DashboardStatisticCardsRow1")
        </div>
        <!-- Total Revenue -->
        <div class="col-12 col-lg-8 order-2 order-md-3 order-lg-2 mb-4">
            @await Component.InvokeAsync("_DashboardTotalRevenue")
        </div>
        <!--/ Total Revenue -->
        <div class="col-12 col-md-8 col-lg-4 order-3 order-md-2">
            @await Component.InvokeAsync("_DashboardStatisticCardsRow2")
        </div>
    </div>
    <div class="row">
        <!-- Destination Statistics -->
        <div class="col-md-6 col-lg-4 col-xl-4 order-0 mb-4">
            @await Component.InvokeAsync("_DashboardDestinationStatistic")
        </div>
        <!--/ Destination Statistics -->
        <!-- Expense Overview -->
        <div class="col-md-6 col-lg-4 order-1 mb-4">
            @await Component.InvokeAsync("_DashboardDestinationStatistic2")
        </div>
        <!--/ Expense Overview -->
        <!-- Guide List -->
        <div class="col-md-6 col-lg-4 order-2 mb-4">
            @await Component.InvokeAsync("_DashboardGuideList")
        </div>
        <!--/ Transactions -->
    </div>
</div>
@using EntityLayer.Concrate;
@model List<AppUser>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Guests</h4>

<a href="/Admin/User/AddNewUser" class="btn btn-primary">Add New User</a>


<div class="card mt-2">
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Fullname</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Image</th>
             @*       <th>Status</th>*@
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">

                @foreach (var item in Model)
                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Name @item.Surname</strong></td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                    data-popup="tooltip-custom"
                                    data-bs-placement="top"
                                    class="avatar avatar-xs pull-up"
                                    title="Lilian Fuller">
                                    <img src="@Url.Content(item.ImageURL)" alt="Avatar" class="rounded-circle" />
                                </li>
                                @* <li data-bs-toggle="tooltip"
                            data-popup="tooltip-custom"
                            data-bs-placement="top"
                            class="avatar avatar-xs pull-up"
                            title="Sophia Wilkerson">
                            <img src="~/sneat-1.0.0/assets/img/avatars/6.png" alt="Avatar" class="rounded-circle" />
                            </li>
                            <li data-bs-toggle="tooltip"
                            data-popup="tooltip-custom"
                            data-bs-placement="top"
                            class="avatar avatar-xs pull-up"
                            title="Christina Parker">
                            <img src="~/sneat-1.0.0/assets/img/avatars/7.png" alt="Avatar" class="rounded-circle" />
                            </li>*@
                            </ul>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    @*<a class="dropdown-item" href="/Destination/DestinationDetails/@item.DestinationID"><i class="bx bx-dna me-1"></i> Preview </a>*@
                                    <a class="dropdown-item" href="/Admin/User/UpdateUser/@item.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" href="/Admin/User/DeleteUser/@item.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                    <a class="dropdown-item" href="/Admin/User/UserComment/@item.Id"><i class="bx bx-message-rounded-dots me-1"></i> Comments</a>
                                    <a class="dropdown-item" href="/Admin/User/UserReservation/@item.Id"><i class="bx bx-restaurant me-1"></i> Reservations</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


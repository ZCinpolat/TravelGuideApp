@using EntityLayer.Concrate;
@model List<Comment>;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Comments</h4>

@*<a href="/Admin/Comment/AddNewComment" class="btn btn-primary">Add New Comment</a>*@

<!-- Basic Bootstrap Table -->
<div class="card mt-2">
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>CommentDate</th>
                    <th>CommentUser</th>
                    <th>Destination</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Description</strong></td>
                        <td> @(((DateTime)item.CommentDate).ToString("dd/MM/yyyy"))</td>
                        <td>@item.CommentUser</td>
                        <td>@item.Destination.City</td>
                        <td>
                            @if (item.Status)
                            {
                                <span class="badge bg-label-primary me-1">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-label-warning me-1">Passive</span>
                            }
                        </td>
                        <td>
                            <a href="/Admin/Comment/DeleteComment/@item.CommentID" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

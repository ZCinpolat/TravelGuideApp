                @Html.ValidationMessageFor(model => model.DestinationID, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="submit text-right">
            <button type="submit" class="btn btn-style btn-primary">Add Comment </button>
        </div>
    </form>
</div>


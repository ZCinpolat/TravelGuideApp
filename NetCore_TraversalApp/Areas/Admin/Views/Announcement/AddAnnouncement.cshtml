@using DTOLayer.DTOs.AnnouncementDTOs;
@model AnnouncementAddDTOs;

@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Add New Announcement</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Title</label>
                        <input type="text" asp-for=Title class="form-control" id="basic-default-fullname" placeholder="Annuncement Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-message">Content</label>
                        <textarea asp-for=Content id="basic-default-message" class="form-control" placeholder="Annucment Content"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                  
                    <button type="submit" class="btn btn-primary">Add New Announcement</button>
                </form>
            </div>
        </div>
    </div>
</div>


